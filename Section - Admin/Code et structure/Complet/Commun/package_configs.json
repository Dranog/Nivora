// ==========================================
// ROOT package.json
// ==========================================
{
  "name": "oliver-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down",
    "prisma:generate": "cd packages/database && npx prisma generate",
    "prisma:migrate": "cd packages/database && npx prisma migrate dev",
    "prisma:deploy": "cd packages/database && npx prisma migrate deploy",
    "prisma:seed": "cd packages/database && npx prisma db seed",
    "prisma:studio": "cd packages/database && npx prisma studio",
    "setup": "npm install && npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

