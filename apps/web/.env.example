# apps/web/.env.example
# API Backend URL (port 3001 par d√©faut)
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Admin Auth Bypass (only for development - set to 'true' to skip auth checks)
# WARNING: Never set this to 'true' in production!
NEXT_PUBLIC_BYPASS_ADMIN_AUTH=false

# CCBill Simulation Mode (for development without CCBill credentials)
# Set to 'true' to enable simulation mode - payments will redirect to success page automatically
# Set to 'false' or remove to use real CCBill integration
NEXT_PUBLIC_CCBILL_SIMULATION=true
