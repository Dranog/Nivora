# ============================================================================
# OLIVER Platform - Environment Variables
# ============================================================================

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/oliver"

# JWT Authentication
JWT_SECRET="change-me-in-production"
JWT_ACCESS_EXPIRES="15m"
JWT_REFRESH_EXPIRES="7d"

# Security
BCRYPT_ROUNDS=12

# Redis
REDIS_URL="redis://localhost:6380"

# MinIO / S3 Storage
MINIO_ENDPOINT="localhost:9002"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="oliver-media"
MINIO_USE_SSL="false"

# Playback Token Security
PLAYBACK_TOKEN_TTL=600
PLAYBACK_BIND_UA="true"
PLAYBACK_BIND_IP="true"
PLAYBACK_IP_TOLERANCE=24

# Watermark Settings
WATERMARK_OPACITY=0.18
WATERMARK_MOVE_INTERVAL=30

# Stripe Payments
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# CCBill Payments (for adult content)
# Get credentials from CCBill Merchant Account: https://admin.ccbill.com
CCBILL_ACCOUNT_NUMBER="999999"
CCBILL_SUBACCOUNT_NUMBER="9999"
CCBILL_FORM_NAME="9999cc"
CCBILL_SALT="your-secret-salt-from-ccbill"
CCBILL_API_TOKEN="your-api-token-from-ccbill"

# Platform Economics
PLATFORM_TAKE_PCT=0.10
RESERVE_PCT=10
MAIN_CLEARS_SECONDS=172800
RESERVE_CLEARS_SECONDS=1296000

# Payout Settings
EXPRESS_CRYPTO_FEE_PCT=0.03
PAYOUT_MIN_AMOUNT=5000

# Server
PORT=3001
NODE_ENV="development"

# Frontend URL (CORS)
FRONTEND_URL="http://localhost:3000"

# SendGrid
SENDGRID_API_KEY="SG.xxx"
SENDGRID_FROM_EMAIL="noreply@oliver.com"
